<h1><span class="glyphicon glyphicon-comment"></span>Send Text</h1>
<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<%= form_for(@sms_message) do |f| %>
		    <%= f.text_field :from, class: "hidden", value: '13239995226'  %>
		    To: <%= f.text_field :to, class: "form-control" %>
		    Body: <%= f.text_area :body, class: "form-control" %>
		    <%= f.submit "Send Text Message", class: "btn btn-success"	%>
	  	<% end %>
	</div>
	<div class="col-md-3"></div>
 </div>