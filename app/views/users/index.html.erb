<%= render partial: 'layouts/nav' %>

<h1 id = "userindextitle">Users</h1>

<div id="userlistcontainer">

	<table class="table table-hover">
  		<thead>
    			<tr id = "usertablelabels">
      				<th>First Name</th>
      				<th>Last Name</th>
      				<th>E-Mail</th>
    			</tr>
  		</thead>

  		<tbody>
    		<% @users.each do |u| %>
      			<tr>
        			<td><%= u.firstname %></td>
        			<td><%= u.lastname %></td>
        			<td><%= u.email %></td>
              <td><%= link_to 'Edit', edit_user_path(u), :class => "btn btn-default glyphicon glyphicon-user", :id => "userbutton" %>
              <td><%= link_to '', u, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-danger glyphicon glyphicon-trash", :id => "userbutton" %></td>
      			</tr>
    	<% end %>
  		</tbody>
	</table>
</div>