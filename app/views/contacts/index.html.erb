<center><h1>Contacts</h1></center>

<body>

<p id="notice"><%= notice %></p>

  <table class="table table-hover">
  		<thead>
    			<tr>
      				<th>Name</th>
      				<th>Phone Number</th>
    			</tr>
  		</thead>

  		<tbody>
    		<% @contacts.each do |c| %>
      			<tr>
        			<td><%= c.name %></td>
        			<td><%= c.phonenumber %></td>
              <td><%= link_to 'Edit', c, action: 'edit', :class => "btn btn-default btn-warning btn-sm glyphicon glyphicon-edit" %></td>
              <td><%= link_to '', c, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-danger btn-sm glyphicon glyphicon-trash" %></td>
      			</tr>
    	<% end %>
  		</tbody>
	</table>

   <%= link_to 'New contact', new_contact_path %>



